<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avans.listurmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListUrMovies">
        <activity
            android:name=".presentation.MovieAdd"
            android:label="@string/add_movie"
            android:exported="false" />
        <activity
            android:name=".presentation.MovieListAdd"
            android:label="@string/add_list"
            android:exported="false" />
        <activity
            android:name=".presentation.MovieListDetail"
            android:label="@string/list_details"
            android:exported="false" />
        <activity
            android:name=".presentation.MovieListOverview"
            android:label="@string/list"
            android:exported="false" />
        <activity
            android:name=".presentation.LoginPage"
            android:label="@string/login"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.MovieDetail"
            android:label="@string/movie_details"
            android:exported="false" />
        <activity
            android:name=".presentation.MovieOverview"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.ListUrMovies.NoActionBar" />
    </application>

</manifest>